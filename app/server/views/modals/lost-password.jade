
#get-credentials.modal-single-input.modal.hide.fade
    div.modal-header
        button.close(data-dismiss='modal') x
        h3=__("Retrieve Password")
    div.modal-body
        form( method="post")#get-credentials-form.form-inline
            p=__("Please enter the email address associated with your account")
            input(type="text", name="email", id='email-tf').required.span4
            button(type="submit")#submit.btn.btn-primary Submit
            button(data-dismiss="modal")#cancel.btn Cancel
            div.alert.alert-error.hide
            button(data-dismiss="alert").close
    div.modal-footer